<h2>Update a book</h2>

<form method="post" action="/books/{{_id}}/edit">
  <label> Title:
    <input type="text" name="title" value="{{title}}"/>
  </label>

  <label> Author:
    <input type="text" name="author" value="{{author}}"/>
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4">{{description}}</textarea>
  </label>

  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{rating}}"/>
  </label>

  <button type="submit"> Save </button>
</form>